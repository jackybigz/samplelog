<div class="container">

<div class="span6 pull-left">
<legend>General Information</legend>
<table>
    <tr>
        <td><p><strong>date:</strong></p></td>
        <td><p><%= @request.request_date %></p></td>
    </tr>
    <tr>
      <p>
        <strong>smd number:</strong>
        <%= @request.request_smd_number %>
      </p>
    </tr>
    <tr>
      <p>
        <strong>brief description:</strong>
        <%= @request.request_brief_description %>
      </p>
    </tr>
    <tr>
      <p>
        <strong>description:</strong>
        <%= @request.request_description %>
      </p>
    </tr>
    <tr>
      <p>
        <strong>supplier:</strong>
        <%= @request.request_supplier %>
      </p>
    </tr>
    <tr>
      <p>
        <strong>colours:</strong>
        <%= @request.request_colours %>
      </p>
    </tr>
    <tr>
      <p>
        <strong>date required:</strong>
        <%= @request.request_date_required %>
      </p>
    </tr>
    <tr>
      <p>
        <strong>required for:</strong>
        <%= @request.request_required_for %>
      </p>
    </tr>
    <tr>
      <p>
        <strong>comments:</strong>
        <%= @request.request_comments %>
      </p>
    </tr>
</table>  



<legend>Shipping Information</legend>

<p>
  <strong>date sent:</strong>
  <%= @request.request_date_sent %>
</p>

<p>
  <strong>received date:</strong>
  <%= @request.request_received_date %>
</p>

<p>
  <strong>tracking number:</strong>
  <%= @request.request_tracking_number %>
</p>

<legend>Completion Dates</legend>

<p>
  <strong>First Date:</strong>
  <%= @request.request_confirmed_comp_date %>
</p>

<p>
  <strong>Second Date:</strong>
  <%= @request.request_confirmed_comp_date2 %>
</p>

<p>
  <strong>Third Date:</strong>
  <%= @request.request_confirmed_comp_date3 %>
</p>

<p>
  <strong>Fourth Date:</strong>
  <%= @request.request_confirmed_comp_date4 %>
</p>

<p>
  <strong>Fifth Date:</strong>
  <%= @request.request_confirmed_comp_date5 %>
</p>

<p>
  <strong>Sixth Date:</strong>
  <%= @request.request_confirmed_comp_date6 %>
</p>

<legend>Status</legend>
<p>
  <%= @request.tag_list %>

</p>



<%= link_to '<i class="icon-edit icon-white"></i> Edit'.html_safe, edit_request_path(@request), class: "btn btn-success" %>
<%= link_to '<i class="icon-circle-arrow-left icon-white"></i> Back'.html_safe, root_path, class: "btn btn-success" %>
<%= link_to '<i class="icon-trash icon-white"></i> Delete'.html_safe, {:controller => :requests,
      :action => 'destroy' }, :method => :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger" %>

</div>

<div class="span6 pull-right">
<%= image_tag @request.sample_image.url, style: "padding: 40px;" %>
</div>


</div>